clean:
	-$(RM) $(OBJ1) $(OBJ2) $(OBJ3)

realclean: clean
	-$(RM) $(BIN1) $(BIN2) $(BIN3)
	-$(RM) .obj/

check-syntax:
	$(COMPILE.cc) $(EXPORTFLAGS) -Wall -Wextra -pedantic -fsyntax-only $(CHK_SOURCES)

